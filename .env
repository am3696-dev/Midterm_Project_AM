# .env

# --- Base Directories ---
# Directory for log files (default: logs)
CALCULATOR_LOG_DIR=logs

CALCULATOR_LOG_FILE=calculator_app.log

# Directory for auto-saved history files (default: history_data)
CALCULATOR_HISTORY_DIR=history_data


# --- History Settings ---
# Maximum number of history entries for undo/redo (default: 100)
CALCULATOR_MAX_HISTORY_SIZE=100

# Whether to auto-save history via the Observer Pattern (default: true)
CALCULATOR_AUTO_SAVE=true

# --- Calculation Settings ---
# Number of decimal places for calculations (default: 20)
CALCULATOR_PRECISION=20

# Maximum allowed input value (default: 100000000000000000000)
CALCULATOR_MAX_INPUT_VALUE=1e20

# Default encoding for file operations (default: utf-8)
CALCULATOR_DEFAULT_ENCODING=utf-8